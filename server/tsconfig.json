{
  "compilerOptions": {

    "target": "es2020",
    "lib": ["ES2020"], 
    /* Modules */
    "module": "commonjs",   
    "rootDir": "./src",    
    "resolveJsonModule": true,   
    "outDir": "./dist",   
    "esModuleInterop": true,         
    "forceConsistentCasingInFileNames": true,          
    "strict": true,      
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "moduleResolution": "node",
    "sourceMap": true
  },
   "include": ["src", "types"]
}
